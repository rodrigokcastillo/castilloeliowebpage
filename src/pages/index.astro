---
import Layout from "../layouts/Layout.astro";

import Card from "../components/Card.astro";
import Heading from "../components/Heading.astro";
import CTA from "../components/CTA.astro";
import Contact from "../components/Contact.astro";
import { Image } from 'astro:assets';
import headshot from '../assets/elio-hero.jpg';

//Project Components
import Python from "../components/Python.astro";
---

<Layout title="Web Developer Portfolio">
  <div id="contents">
    <main class="container">
      <div class="mb-16">
        <Heading />
        <p class="mt-4 text-lg text-zinc-500 dark:text-zinc-400 font-light lg:text-xl">
          Ph.D. in Biological Sciences with 15 years of academic scientific research
          experience. Specialized in taxonomy, phylogeny, molecular biology, classical
          and molecular cytogenetics in Orthoptera, particularly in chromosome
          evolution, sex chromosomes and dynamics of repetitive DNA. Able to
          effectively self-manage during independent projects, as well as collaborate as
          part of a productive team.
          <a href="#contact" class="underline text-gray-300">reach out</a>.
        </p>
      </div>
      <div class="mb-16">
        <h2 class="text-3xl mt-6 font-medium lg:text-4xl tracking-tight text-primary dark:text-white">
          EDUCATION
        </h2>
        <p class="mt-4 text-lg text-zinc-500 dark:text-zinc-400">
          <strong>2018 - </strong>
          Postdoc Researcher at the Instituto de Biología
          Subtropical CONICET-UNaM. Posadas, Misiones,
          Argentina.
        </p>
        <p class="mt-4 text-lg text-zinc-500 dark:text-zinc-400">
          <strong>2016 - </strong>
          Ph.D. in Biological Sciences. Córdoba National
          University (UNC), Córdoba, Argentina.
        </p>
        <p class="mt-4 text-lg text-zinc-500 dark:text-zinc-400">
          <strong>2008 - </strong>
          BSc. in Genetics. Misiones National University
          (UNaM), Posadas, Argentina.
        </p>
        <div href="#" class="overflow-hidden">
          <Image 
            src={headshot}
            densities={[1, 2, 3]}
            alt="Elio Castillo Portfolio"
            class="mx-auto my-6 h-auto max-w-2xl w-auto"
          />
        </div>
      </div>
      <h2 class="text-3xl mt-6 font-medium lg:text-4xl tracking-tight text-primary dark:text-white mb-2">
        CURRENT ACADEMIC POSITION
      </h2>
      <div class="mx-auto grid grid-cols-1 md:grid-cols-3 gap-4">
        
        <div class="max-w-sm bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
          <a href="#" class="overflow-hidden">
            <Image 
              src={headshot}
              densities={[1, 2, 3]}
              alt="Elio Castillo Portfolio"
              class="mx-auto h-auto max-w-full object-cover"
            />
          </a>
          <div class="p-5">
            <a href="#">
              <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">
                01/01/2024 - Present
              </h5>
            </a>
            <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
              Postdoc Researcher at the iDiv Halle-Jena-Leipzig.
              Friedrich Schiller University Jena, Institute of
              Ecology and Evolution, Population Ecology Group.
              Jena, Germany
            </p>
            <a href="#" class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
              Read more
              <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
              </svg>
            </a>
          </div>
        </div>

        <div class="max-w-sm bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
          <a href="#" class="overflow-hidden">
            <Image 
              src={headshot}
              densities={[1, 2, 3]}
              alt="Elio Castillo Portfolio"
              class="mx-auto h-auto max-w-full object-cover"
            />
          </a>
          <div class="p-5">
            <a href="#">
              <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">
                10/12/2018 - Present
              </h5>
            </a>
            <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
              Scientific Researcher of the National Scientific and
              Technical Research Council (CONICET).
              Associate Researcher Res Nº 1908. 2023
              Assistant Researcher Res Nº 2110. 2018
            </p>
            <a href="#" class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
              Read more
              <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
              </svg>
            </a>
          </div>
        </div>

        <div class="max-w-sm bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
          <a href="#" class="overflow-hidden">
            <Image 
              src={headshot}
              densities={[1, 2, 3]}
              alt="Elio Castillo Portfolio"
              class="mx-auto h-auto max-w-full object-cover"
            />
          </a>
          <div class="p-5">
            <a href="#">
              <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">
                04/11/2014 - Present
              </h5>
            </a>
            <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
              Assistant Professor Cell and Molecular Biology,
              Misiones National University (UNaM). Res Nº 413-19.
            </p>
            <a href="#" class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
              Read more
              <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
              </svg>
            </a>
          </div>
        </div>
        
      </div>
      <div class="my-8 bg-black">
        <CTA />
      </div>
      <h2
        class="text-3xl mt-6 font-medium lg:text-4xl tracking-tight text-primary dark:text-white mb-2"
      >
        Fun Projects
      </h2>
      <div class="mx-auto grid grid-cols-1 md:grid-cols-3 gap-4">
        <div class="">
          <Card
            title="Misc Python Apps"
            body="Miscellaneous Python applications and scripts I've made to help me learn Python and to use as productivity tools or save me time."
            tags="Python"
            github="https://github.com/leabs/misc-python-apps"
          >
            <Python />
          </Card>
        </div>
        <div class="">
          <Card
            title="Misc Python Apps"
            body="Miscellaneous Python applications and scripts I've made to help me learn Python and to use as productivity tools or save me time."
            tags="Python"
            github="https://github.com/leabs/misc-python-apps"
          >
            <Python />
          </Card>
        </div>
        <div class="">
          <Card
            title="Misc Python Apps"
            body="Miscellaneous Python applications and scripts I've made to help me learn Python and to use as productivity tools or save me time."
            tags="Python"
            github="https://github.com/leabs/misc-python-apps"
          >
            <Python />
          </Card>
        </div>
      </div>
      <div class="my-8">
        <Contact />
      </div>
    </main>
  </div>
</Layout>

<style is:global>
  main {
    margin: auto;
    padding: 0.75rem;
    width: 1100px;
    max-width: 100%;
    color: white;
    line-height: 1.6;
  }
  .project-image {
    max-width: 100% !important;
    overflow: hidden;
  }
  .project-cards {
  }
  .video-wrapper {
    background: #111111;
    padding: calc(1.5rem - 1px);
    line-height: 1.4;
    border-radius: 8px;
    margin-bottom: 2rem;
  }
  .project-column > div {
    max-width: 100%;
    overflow: hidden;
  }
  .projects-alt > li {
    gap: 1rem !important;
  }
  .astro-a {
    position: absolute;
    top: -32px;
    left: 50%;
    transform: translatex(-50%);
    width: 220px;
    height: auto;
    z-index: -1;
  }

  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
    font-size: 2.75rem;
  }
  .instructions {
    margin-bottom: 2rem;
    border: 1px solid rgba(var(--accent-light), 25%);
    background: linear-gradient(
      rgba(var(--accent-dark), 66%),
      rgba(var(--accent-dark), 33%)
    );
    padding: 1.5rem;
    border-radius: 8px;
  }
  .instructions code {
    font-size: 0.8em;
    font-weight: bold;
    background: rgba(var(--accent-light), 12%);
    color: rgb(var(--accent-light));
    border-radius: 4px;
    padding: 0.3em 0.4em;
  }
  .instructions strong {
    color: rgb(var(--accent-light));
  }
  .link-card-grid {
    display: grid;
    gap: 0;
    padding: 0;
  }
  .read-more {
    color: #fff;
  }
  details {
    position: relative;
    top: -1px;
    margin-top: 0;
    margin-bottom: 1rem;
    padding: 1rem;
    border-radius: 0 0 8px 8px;
    max-width: 900px;
  }
  details > div {
    max-width: 830px;
  }

  summary:hover {
    cursor: pointer;
  }
</style>

<script></script>
