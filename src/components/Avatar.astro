---
import { Image } from 'astro:assets';
import headshot from '../assets/elio-photo.jpeg';
---

<div class="relative flex items-center gap-x-4">
  <Image 
    src={headshot}
    densities={[1, 2, 3]}
    alt="Developers's headshot"
    class="h-16 w-16"
  />
  <div class="text-lg leading-6">
    <h1 class="mb-2 font-semibold text-primary text-xl dark:text-white">
      <span class="absolute inset-0"></span>
      Elio Rodrigo Castillo
    </h1>
    <p class="text-zinc-500 dark:text-zinc-400">Ph.D. in Biological Sciences</p>
  </div>
</div>
